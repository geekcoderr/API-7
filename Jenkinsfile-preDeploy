node {
    stage('SCM UPDATE') {
        if (!fileExists('.git')) {
            echo 'GIT REPO DOESN\'T EXIST'
            sh 'git clone -b main https://github.com/geekcoderr/API-7 .'
        } else {
            echo 'GIT REPO ALREADY EXISTS'
            checkout scm
        }
    }

    // Define the parameter directly in the Scripted Pipeline
    def stat = 'hello ; ls /' // You can change this to any desired default value

    stage('preDeploy') {
        // Print the parameter value
        sh "echo ${stat}"
    }
}
