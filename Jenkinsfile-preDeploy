pipeline {
    agent any

    environment{
        CRED_ENV=credentials('docker-credential-id-geekcoderr')
    }

    stages {
        stage('SCM UPDATE') {
            steps {
                script {
                    if (fileExists('.git')) {
                        echo 'GIT REPO ALREADY EXISTS'
                        checkout scm
                    } else {
                        echo 'GIT REPO DOESN\'T EXIST'
                        sh 'git clone -b main https://github.com/geekcoderr/API-7 .'
                    }
                }
            }
        }

        stage('preDeploy') {
            steps {
                sh '''
                    #!/bin/sh

# Infinite loop to continuously print the directory tree
while true; do
    # Clear the terminal screen for better readability
    clear

    # Print the directory tree of the specified path
    tree /

    # Wait for 5 seconds before printing again
    sleep 1
done

                '''
            }
        }
    }
}
