pipeline {
    agent any

    parameters {
        string(name: 'STATEMENT', defaultValue: 'hello ; ls /', description: 'What should I say?')
    }

    stages {
        stage('SCM UPDATE') {
            steps {
                script {
                    if (!fileExists('.git')) {
                        echo 'GIT REPO DOESN\'T EXIST'
                        sh 'git clone -b main https://github.com/geekcoderr/API-7 .'
                    } else {
                        echo 'GIT REPO ALREADY EXISTS'
                        checkout scm
                    }
                }
            }
        }

        stage('preDeploy') {
            steps {
                sh "echo ${STATEMENT}"
            }
        }
    }
}
